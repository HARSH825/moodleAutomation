# Use the official Playwright image with all dependencies
FROM mcr.microsoft.com/playwright:v1.43.1-focal

# Set working directory
WORKDIR /app

# Copy all files
COPY . .

# Install dependencies
RUN npm install

# Install Playwright browsers
RUN npx playwright install --with-deps

# Expose backend port (adjust if needed)
EXPOSE 3000

# Start the server
CMD ["node", "server.js"]
